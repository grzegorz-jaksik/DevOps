- name: Instalacja i uruchomienie dockera
  hosts: all
  become: true
  tasks:
  - name: "upewnienie siÄ™ czy jest docker"
    apt:
      name:
      - docker
      - docker-compose
      state: latest


  - name: start docker
    service:
      name: docker
      state: started


  - name: PUll Nginx
    docker_image:
      name: nginx:1.19.2-alpine
      source: pull    
  - name: start Nginx
    docker_container:
      name: Nginx
      image: nginx:1.19.2-alpine
      state: started
      ports: 80:80


    